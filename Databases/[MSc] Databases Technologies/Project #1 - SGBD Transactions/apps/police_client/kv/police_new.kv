<PoliceNew>:
    canvas.before:
        Color:
            rgba: (230/255, 242/255, 255/255, 0.8)
        Rectangle:
            pos: self.pos
            size: self.size
    
    # ---------------------------------------------------------------------
    # declaring some identifiers
    
    text_accident_description_value : text_accident_description_value
    text_accident_location_value : text_accident_location_value
    text_accident_km_value : text_accident_km_value
    text_accident_concelho_value : text_accident_concelho_value
    text_accident_timestamp_value : text_accident_timestamp_value

    label_policia_name : label_policia_name
    label_accident_description : label_accident_description
    label_accident_concelho : label_accident_concelho
    label_accident_location : label_accident_location
    label_accident_km : label_accident_km
    label_accident_timestamp : label_accident_timestamp
    label_severely_injured : label_severely_injured
    label_severely_injured_value : label_severely_injured_value
    label_casualties : label_casualties
    label_casualties_value : label_casualties_value
    # ---------------------------------------------------------------------

    # -----------------------------------------------------------------------------------------
    GridLayout: # ROOT GRIDLAYOUT
        cols:1
        size: root.width - 50, root.height -10
        pos: 25, 5

        Label:
            id: label_policia_name
            text: "Esquadra PSP Covilhã"
            color: (0.0, 0.0, 0.4, 1.0)
            font_size: 45
            bold: True

        # ---------------------------------------------------------------
        GridLayout: # ACCIDENT DATA (LABEL)
            cols: 2
            spacing: 30

            Label:
                id: label_id_data
                text: "Inserir dados"
                color: (0.0, 0.0, 0.4, 1.0)
                font_size: 20
                bold: True
                width: 200
                size_hint_x: None

            Label:
                id: label_id_data_dashes
                text: "------------------------------------------------------"
                color: (0.0, 0.0, 0.4, 1.0)
                font_size: 25
                bold: False
        # ---------------------------------------------------------------

        # -------------------------------------------
        GridLayout: # ACCIDENT DESCRIPTION
            cols:2
            spacing: 30
            size: root.width * 0.8, root.height * 0.8
            row_default_height: 50
            row_force_default: True

            Label:
                id: label_accident_description
                text: "Descrição"
                color: (0.0, 0.0, 0.4, 1.0)
                font_size: 15
                bold: False
                width: 200
                size_hint_x: None

            TextInput:
                id: text_accident_description_value
                hint_text: "---"
                multiline: False
                on_text: root.update_padding(args[0])
                padding_x: self.width/2 # initial padding
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        # -------------------------------------------

        # -------------------------------------------
        GridLayout: # ACCIDENT CONCELHO
            cols:2
            spacing: 30
            size: root.width * 0.8, root.height * 0.8
            row_default_height: 50
            row_force_default: True

            Label:
                id: label_accident_concelho
                text: "Concelho"
                color: (0.0, 0.0, 0.4, 1.0)
                font_size: 15
                bold: False
                width: 200
                size_hint_x: None

            TextInput:
                id: text_accident_concelho_value
                hint_text: "---"
                multiline: False
                on_text: root.update_padding(args[0])
                padding_x: self.width/2 # initial padding
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        # -------------------------------------------

        # -------------------------------------------
        GridLayout: # ACCIDENT LOCATION
            cols:2
            spacing: 30
            size: root.width * 0.8, root.height * 0.8
            row_default_height: 50
            row_force_default: True

            Label:
                id: label_accident_location
                text: "Localização"
                color: (0.0, 0.0, 0.4, 1.0)
                font_size: 15
                bold: False
                width: 200
                size_hint_x: None

            TextInput:
                id: text_accident_location_value
                hint_text: "---"
                multiline: False
                on_text: root.update_padding(args[0])
                padding_x: self.width/2 # initial padding
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        # -------------------------------------------

        # -------------------------------------------
        GridLayout: # ACCIDENT KM
            cols:2
            spacing: 30
            size: root.width * 0.8, root.height * 0.8
            row_default_height: 50
            row_force_default: True

            Label:
                id: label_accident_km
                text: "KM"
                color: (0.0, 0.0, 0.4, 1.0)
                font_size: 15
                bold: False
                width: 200
                size_hint_x: None

            TextInput:
                id: text_accident_km_value
                hint_text: "---"
                multiline: False
                on_text: root.update_padding(args[0])
                padding_x: self.width/2 # initial padding
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        # -------------------------------------------

        # -------------------------------------------
        GridLayout: # ACCIDENT TIMESTAMP
            cols:2
            spacing: 30
            size: root.width * 0.8, root.height * 0.8
            row_default_height: 50
            row_force_default: True

            Label:
                id: label_accident_timestamp
                text: "Data e Hora\n(dd/mm/aaaa hh:mm)"
                color: (0.0, 0.0, 0.4, 1.0)
                font_size: 15
                bold: False
                width: 200
                size_hint_x: None
                halign: 'center'

            TextInput:
                id: text_accident_timestamp_value
                hint_text: "---"
                multiline: False
                on_text: root.update_padding_and_format(args[0])
                padding_x: self.width/2 # initial padding
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        # -------------------------------------------

        # ------------------------------------------------
        GridLayout: # SEVERELY INJURED
            cols: 2
            size: root.width * 0.8, root.height * 0.8
            row_default_height: 50
            row_force_default: True
            spacing: 30

            Label:
                id: label_severely_injured
                text: "Feridos Graves"
                color: (0.0, 0.0, 0.4, 1.0)
                font_size: 15
                bold: False
                width: 200
                size_hint_x: None
            
            # --------------------------------------------
            GridLayout: # EDIT SEVERELY INJURED
                cols: 3
                Button:
                    text: "-"
                    on_press: root.decrease_severely_injured()
                    bold: True
                    background_color: (0.0, 0.5, 1.0, 0.5)

                Label:
                    id: label_severely_injured_value
                    text: root.severely_number
                    color: (0.0, 0.0, 0.4, 1.0)
                    font_size: 20
                    bold: True

                Button:
                    text: "+"
                    on_release: root.increase_severely_injured()
                    bold: True
                    background_color: (0.0, 0.5, 1.0, 0.5)
            # --------------------------------------------
        # ------------------------------------------------

        # ------------------------------------------------
        GridLayout: # CASUALTIES
            cols: 2
            spacing: 30
            size: root.width * 0.8, root.height * 0.8
            row_default_height: 50
            row_force_default: True

            Label:
                id: label_casualties
                text: "Mortos"
                color: (0.0, 0.0, 0.4, 1.0)
                font_size: 15
                bold: False
                width: 200
                size_hint_x: None

            # --------------------------------------------
            GridLayout: # EDIT CASUALTIES
                cols: 3
                Button:
                    text: "-"
                    on_press: root.decrease_casualties()
                    bold: True
                    background_color: (0.0, 0.5, 1.0, 0.5)

                Label:
                    id: label_casualties_value
                    text: "0"
                    color: (0.0, 0.0, 0.4, 1.0)
                    font_size: 20
                    bold: True

                Button:
                    text: "+"
                    on_release: root.increase_casualties()
                    bold: True
                    background_color: (0.0, 0.5, 1.0, 0.5)
            # --------------------------------------------
        # ------------------------------------------------

        GridLayout: # CONFIRM BUTTON
            cols: 1
            size: root.width * 0.8, root.height * 0.8
            row_default_height: 50
            row_force_default: True

            Button:
                text: "Registar Acidente"
                on_release: root.save_accident()
                bold: True
                background_color: (0.0, 0.5, 1.0, 0.5)
    # -----------------------------------------------------------------------------------------