<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iris"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botao">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="115dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/nome"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="CONTApelos DEDOSdosPÉS"
            android:textStyle="bold"
            android:fontFamily=""
            android:layout_marginRight="20dp"
            android:textSize="30sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <TextView
        android:id="@+id/username_texto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Nome de Utilizador"
        android:layout_marginLeft="30dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="30dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/username" />

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#FFFFFF"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/username_texto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pass_texto"/>

    <TextView
        android:id="@+id/pass_texto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pass" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="0dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/pass_texto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botao"/>

    <Button
        android:id="@+id/botao"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Iniciar"
        android:onClick="iniciar"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/botao_azul"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/botao2"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Vamos Lá"
        android:onClick="tabuada"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/botao_azul"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/registar"
        android:text="Ainda não está registado?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:onClick="registar"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/botao2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>