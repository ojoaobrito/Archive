<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categorias">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/categorias_texto"
        android:text="Categorias"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#2558ae"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scroll_categorias"/>

    <TextView
        android:id="@+id/texto_inicial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="NÃ£o existem categorias guardadas..."
        app:layout_constraintTop_toTopOf="@+id/scroll_categorias"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scroll_categorias"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:requiresFadingEdge="vertical"
        android:fadeScrollbars="false"
        app:layout_constraintTop_toBottomOf="@+id/categorias_texto"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_pomares"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/pomares">

            </LinearLayout>

            <TextView
                android:id="@+id/margem"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:text=""
                app:layout_constraintTop_toBottomOf="@+id/layout_pomares" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>