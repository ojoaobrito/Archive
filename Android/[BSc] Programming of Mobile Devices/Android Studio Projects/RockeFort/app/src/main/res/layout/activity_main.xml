<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundoinicial"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Título"
        android:text="RockeFort"
        android:textColor="#00CED1"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scroll1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:requiresFadingEdge="vertical"
        android:fadeScrollbars="false"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/Título"
        app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/layout_Jogos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:paddingBottom="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/BotãoNovo"
        android:onClick="novoJogo"
        android:background="@drawable/botao_azul"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>