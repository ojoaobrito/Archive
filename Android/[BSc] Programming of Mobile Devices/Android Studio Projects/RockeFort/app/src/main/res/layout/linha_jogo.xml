<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:id="@+id/secundario"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/edit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/botao_azul"
        android:drawableTop="@drawable/botao_edit"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="1dp"
        android:onClick="editarJogo"
        app:layout_constraintTop_toTopOf="@+id/jogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/jogo" />

    <Button
        android:id="@+id/trash"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/botao_vermelho"
        android:drawableTop="@drawable/botao_trash"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:onClick="apagarJogo"
        app:layout_constraintTop_toBottomOf="@+id/edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/jogo"
        app:layout_constraintBottom_toBottomOf="@+id/jogo" />

    <Button
        android:id="@+id/jogo"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:background="@drawable/jogo"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="4dp"
        android:onClick="infoJogo"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/trash"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/margem"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/jogo" />


</androidx.constraintlayout.widget.ConstraintLayout>