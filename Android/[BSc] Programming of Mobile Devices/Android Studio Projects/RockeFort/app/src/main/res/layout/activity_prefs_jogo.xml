<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrefsJogo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:text="PreferÃªncias do Jogo"
        android:shadowColor = "#000"
        android:shadowDx = "2"
        android:shadowDy = "2"
        android:shadowRadius = "3"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_fora"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintBottom_toTopOf="@+id/Sair"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/linear1"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:scaleType="fitCenter"
                android:shadowColor = "#000"
                android:onClick="reddit"
                android:background="#ffe6e6"
                android:shadowDx = "2"
                android:shadowDy = "2"
                android:shadowRadius = "3"
                android:clickable="true"
                android:layout_weight="1"
                android:src="@drawable/reddit"
                android:id="@+id/reddit"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:shadowColor = "#000"
                android:background="#ffe6e6"
                android:shadowDx = "2"
                android:shadowDy = "2"
                android:onClick="youtube"
                android:shadowRadius = "3"
                android:scaleType="fitCenter"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:src="@drawable/youtube"
                android:id="@+id/youtube"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/linear2"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:onClick="news"
                android:background="#e6f7ff"
                android:layout_weight="1"
                android:shadowColor = "#000"
                android:shadowDx = "2"
                android:shadowDy = "2"
                android:shadowRadius = "3"
                android:layout_margin="20dp"
                android:src="@drawable/news"
                android:id="@+id/news"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:layout_margin="20dp"
                android:scaleType="fitCenter"
                android:shadowColor = "#000"
                android:onClick="tips"
                android:background="#e6f7ff"
                android:shadowDx = "2"
                android:shadowDy = "2"
                android:shadowRadius = "3"
                android:layout_weight="1"
                android:src="@drawable/tips"
                android:id="@+id/tips"/>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/Sair"
        android:onClick="InfoJogo"
        android:background="@drawable/botao_cinzento"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>